<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=found._id%>?_method=PUT" method="POST" novalidate class="validateForm">
                <div>
                    <label class="form-label mt-3" for="title">Title </label>
                    <input class="form-control" type="text" placeholder="campground" name="campground[title]"
                        value="<%=found.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a title.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="" cols="13" rows="1"
                        required><%=found.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add some description.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="price">Price</label>
                    <input class="form-control" type="number" value="<%=found.price%>" placeholder="Price"
                        name="campground[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a price.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="locationn">Location</label>
                    <input class="form-control" type="text" value="<%=found.location%>" placeholder="location"
                        name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a location.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="locationn">Image</label>
                    <input class="form-control" type="url" value="<%=found.image%>" placeholder="imageurl"
                        name="campground[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide an image url.
                    </div>
                </div>
                <button class="btn btn-info mt-4 px-4">Edit</button>
            </form>
        </div>
    </div>