<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="validateForm" novalidate>
                <div>
                    <label class="form-label mt-3" for="title">Title </label>
                    <input class="form-control" type="text" placeholder="campground" name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a title.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="" cols="13" rows="1"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please add some description.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="price">Price</label>
                    <input class="form-control" type="number" placeholder="Price" name="campground[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a price.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="locationn">Location</label>
                    <input class="form-control" type="text" placeholder="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a location.
                    </div>
                </div>
                <div>
                    <label class="form-label mt-3" for="locationn">Image</label>
                    <input class="form-control" type="url" placeholder="imageurl" name="campground[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide an image url.
                    </div>
                </div>
                <button class="btn btn-success mt-4 px-4">Create</button>
            </form>
        </div>
    </div>

    